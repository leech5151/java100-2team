<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- DAO 객체를 자동으로 생성하려면,
     namespace의 값이 인터페이스 이름과 같아야 한다. -->
<mapper namespace="java100.app.dao.Pet_StargramFileDao">

    <select id="findByPet_StargramNo" resultType="pet_stargramUploadFile" parameterType="int">
        select mda_no, file
        from str_mda
        where str_no=#{value}
    </select>

    <insert id="insert" parameterType="pet_stargramUploadFile">
        insert into str_mda(file, str_no)
        values(#{filename}, #{pet_stargramNo})
    </insert>

    <delete id="deleteAllByPet_StargramNo" parameterType="int">
        delete from str_mda
        where str_no=#{value}
    </delete> 
 
</mapper>  









